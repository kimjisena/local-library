extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='book') Book:
      select#book.form-control(type='select' placeholder='Select book' name='book' required='true')
        - bookList.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for book in bookList
          option(value=book._id, selected=(selectedBook === book._id.toString() ? 'selected' : false) ) #{book.title}

    div.form-group
      label(for='imprint') Imprint:
      input#imprint.form-control(type='text' placeholder='Publisher and date information' name='imprint' required='true' value=(bookInstance === undefined ? '' : bookInstance.imprint))
    div.form-group
      label(for='dueBack') Date when book available:
      input#dueBack.form-control(type='date' name='dueBack' value=(bookInstance === undefined ? '' : bookInstance.dueBack))

    div.form-group
      label(for='status') Status:
      select#status.form-control(type='select' placeholder='Select status' name='status' required='true')
        for status in ['Maintenance', 'Available', 'Loaned', 'Reserved']
            option(value=status, selected=(bookInstance !== undefined && status === bookInstance.status ? 'selected' : false) ) #{status}

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
